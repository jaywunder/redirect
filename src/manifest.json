{
	"manifest_version": 2,
	"name": "Redirect",
	"version": "2.1",
	"description": "Helps you focus on homework by redirecting you from distracting websites",
	"content_scripts": [{
		"matches": ["*://*/*"],
		"css": [],
		"js": [
			"lib/browser-polyfill.min.js",
			"content_script.js"
		],
		"run_at": "document_start"
	}],
	"version_name": "v0.1 Tiny Bat",
	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_popup": "popup/index.html"
	},
	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"background.js"
		],
		"persistent": false
	},
	"permissions": [
		"tabs",
		"storage",
		"webNavigation"
  ],
	"storage": {
	  "name": "Redirect",
	  "properties": {
	    "distractions": {
	      "type": "array",
	      "items": {
	        "type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"enabled": {
							"type": "boolean"
						}
					}
	      }
	    },
			"focus": {
				"type": "string"
			},
			"isWorking": {
				"type": "boolean"
			},
			"breakInfo": {
				"type": "object",
				"properties": {
					"isOnBreak": {
						"type": "boolean"
					},
					"breakStart": {
						"type": "number"
					},
					"breakLength": {
						"type": "number"
					}
				}
			}
	  }
	}
}
